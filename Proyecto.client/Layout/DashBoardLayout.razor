@inherits LayoutComponentBase

<div class="dashboard-layout">
    <div class="page">
        <div class="sidebar">
            <NavMenu />
        </div>

        <main>
            <div class="top-row px-4">
                <span class="me-3">Bienvenido, Usuario</span>
                <a href="/logout" class="btn btn-link">Cerrar Sesión</a>
            </div>

            <article class="content px-4">
                @Body
            </article>
        </main>
    </div>
</div>

<style>



    .dashboard-layout {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    .page {
        display: flex;
        flex: 1;
    }

    .sidebar {
        background-color: #f8f9fa;
        width: 250px;
        position: fixed;
        height: 100vh;
        box-shadow: 2px 0 5px rgba(0,0,0,0.1);
    }

    main {
        flex: 1;
        margin-left: 250px;
        padding: 1rem;
    }

    .top-row {
        background-color: #f7f7f7;
        border-bottom: 1px solid #d6d5d5;
        justify-content: flex-end;
        height: 3.5rem;
        display: flex;
        align-items: center;
    }

    .content {
        padding: 1.5rem 0;
    }
</style>