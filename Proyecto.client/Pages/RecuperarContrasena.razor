@page "/recuperar-contrasena"
@layout LoginLayout
@inject NavigationManager Navigation

<div class="login-box">
    <h2 class="login-title">Recuperar contraseña</h2>
    <p class="login-subtitle">Ingrese su correo para recuperar acceso</p>

    <EditForm Model="@RecoveryModel" OnValidSubmit="@HandleRecovery">
        <DataAnnotationsValidator />

        <div class="form-group">
            <label class="form-label">Correo electrónico</label>
            <i class="bi bi-envelope-fill"></i>
            <InputText class="form-control" @bind-Value="RecoveryModel.Email" />
            <ValidationMessage For="@(() => RecoveryModel.Email)" />
        </div>

        <button type="submit" class="login-button mb-3">Enviar enlace</button>

        <div class="text-center">
            <p class="mb-0"><a href="/" class="text-decoration-none">Volver al inicio de sesión</a></p>
        </div>
    </EditForm>
</div>

@code {
    private RecoveryRequest RecoveryModel { get; set; } = new();

    private void HandleRecovery()
    {
        // Lógica de recuperación
        Navigation.NavigateTo("/");
    }

    public class RecoveryRequest
    {
        [Required(ErrorMessage = "Ingrese su correo electrónico")]
        [EmailAddress(ErrorMessage = "Ingrese un correo válido")]
        public string Email { get; set; } = string.Empty;
    }
}
