        flex: 1;
        padding: 2rem;
        text-align: center;
    }

    .start-process-button {
        margin-top: 1.5rem;
        padding: 0.75rem 2rem;
        font-size: 1.1rem;
    }

    .dashboard-footer {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
        background-color: #76a5af;
        padding: 2rem;
        border-top: 1px solid #e9ecef;
    }

    .footer-section {
        flex: 1;
        min-width: 250px;
        margin: 0.5rem;
        padding: 1rem;
    }

    .copyright {
        text-align: center;
        padding: 1rem;
        background-color: #e9ecef;
    }
